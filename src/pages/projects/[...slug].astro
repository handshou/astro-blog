---
export const prerender = true;

import { CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../../layouts/Projects.astro';

export async function getStaticPaths() {
  const projCollection = await getCollection('projects');
  return projCollection.map((proj) => ({
    params: { slug: proj.slug },
    props: proj,
  }));
}

type Props = CollectionEntry<'proj'>;
const proj = Astro.props;

const { Content } = await proj.render();
---

<BaseLayout content={proj.data}>
    <Content content={proj.data} />
</BaseLayout>
