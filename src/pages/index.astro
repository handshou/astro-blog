---
import BaseHead from '../components/BaseHead.astro';
import Browser from '../components/Browser.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Browser title={SITE_TITLE}>
			<main class="content">
				<h1>🧑🏽‍🌾 gardener</h1>
				<p>
					Hello! This is my garden.
				</p>
				I write about cycling, hardship and photography.
				<p>
					Built on Astro and Notion.
				</p>
			</main>
		</Browser>
	</body>
</html>

<style>
	.content {
		display: flex;
		align-items: center;
		flex-direction: column;
		padding: 0 0.5em 0.5em 0.5em;
	}
</style>